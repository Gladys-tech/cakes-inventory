{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es2017",
        "module": "commonjs",
        "types": ["node"],
        "moduleResolution": "node",
        "outDir": "./dist",
        // "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/utils/emailConfig.ts", "/express.d.ts"],
    "exclude": ["node_modules", "build", "dist", "coverage", ".next"]
}
